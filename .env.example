# ==========================================
# FourKites Workflow Builder - Environment Configuration
# ==========================================
# Copy this file to .env and fill in your values
# DO NOT commit the .env file with real credentials

# ==========================================
# ANTHROPIC AI CONFIGURATION
# ==========================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==========================================
# REDIS CONFIGURATION (Session Storage)
# ==========================================
# For production: Use managed Redis (AWS ElastiCache, Azure Cache for Redis)
# For local dev: Use localhost
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==========================================
# TEMPORAL CONFIGURATION
# ==========================================
# Temporal Server Connection
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default

# Temporal UI (for monitoring workflows)
# Access at: http://localhost:8233
TEMPORAL_UI_PORT=8233

# ==========================================
# BACKEND API CONFIGURATION
# ==========================================
# FastAPI Backend Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001
API_BASE_URL=http://localhost:8001

# Environment (development, staging, production)
ENVIRONMENT=development

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================
# Next.js Frontend Application
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8001

# ==========================================
# EMAIL INTEGRATION (Gmail)
# ==========================================
# For Gmail API integration
GMAIL_CREDENTIALS_PATH=./config/gmail_credentials.json
GMAIL_TOKEN_PATH=./config/gmail_token.json
GMAIL_SENDER_EMAIL=your_email@fourkites.com

# ==========================================
# LOGGING & MONITORING
# ==========================================
LOG_LEVEL=INFO
ENABLE_DEBUG=false

# ==========================================
# AWS DEPLOYMENT (Optional)
# ==========================================
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_ECR_REGISTRY=your_registry_url
# AWS_ECS_CLUSTER=fourkites-workflow-cluster

# ==========================================
# AZURE DEPLOYMENT (Optional)
# ==========================================
# AZURE_SUBSCRIPTION_ID=your_subscription_id
# AZURE_RESOURCE_GROUP=fourkites-workflow-rg
# AZURE_CONTAINER_REGISTRY=yourregistry.azurecr.io
# AZURE_AKS_CLUSTER=fourkites-workflow-aks

# ==========================================
# SERVICE PORTS REFERENCE
# ==========================================
# Frontend UI:          http://localhost:3000
# Backend API:          http://localhost:8001
# Backend API Docs:     http://localhost:8001/docs
# Temporal UI:          http://localhost:8233
# Temporal Server:      localhost:7233
# Redis:                localhost:6379
